<% if (title) { %>
    <h1 id="mainHeader"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => {%>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

<div class='deleteClass'>
<p>All Fields are Required</p>

<form id='deleteForm' class="form" method='post' action='/inv/delete'>
    <fieldset>
        <p>Confirm Deletion -- The delete is permanent.</p>
            
        <label class='above' for=inv_make>Make</label>
        <input readonly id=addMake type='text' placeholder='Min 3 Characters' name='inv_make' required value="<%= locals.inv_make %>"> 
    
        <label class='above' for=inv_model>Model</label>
        <input readonly type='text' placeholder='Min 3 Characters' name='inv_model' value="<%= locals.inv_model %>" required> 
            
        <label class='above' for=inv_year>Year</label>
        <input readonly type='number' placeholder='4-digit year' name='inv_year' value="<%= locals.inv_year %>" required> 

        <label class='above' for=inv_price>Price</label>
        <input readonly type='text' placeholder='No Commas or Decimals' pattern=^(0|[1-9][0-9]*)$ name='inv_price' value="<%= locals.inv_price %>" required> 

    </fieldset>
    
    <input type='submit' id=invSubmit value="Delete Vehicle">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
    
</form>

<script src="../../js/inv-update.js"></script>