<% if (title) { %>
    <h1 id="mainHeader"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => {%>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
    <% } %>

    <div id="deleteClassSelect" class="form">
        <h2>Delete Classification</h2>
      
        <p>Select a classification from the list to delete</p>
      
        <%- form  %>
<br>
            <div id="deletebutton"></div>
    </div>
    

    <script src="../../js/class-delete.js"></script>

