<% if (title) { %>
    <h1 id="mainHeader"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>



<div class="invManage">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <p>You're logged in</p>
    <div class="manageButton">
        <a id="editAccountLink" href="/account/update/<%= locals.accountData.account_id %>">Edit Account Information</a>
    </div>
    <%- accountStatus %>
</div>
